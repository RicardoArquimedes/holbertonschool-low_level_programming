#include "holberton.h"

char *cap_string(char *str)

{
	int i = 0;

	for (i = 0; str[i] != '\0'; i++)
	{
		if (i == 0)

		{
			if (str[i] >= 'a' && str[i] <= 'z')
			{
				str[i] -= 32;
			}
			else if (str[i] == ' ' || str[i] == '\t'
				 || str[i] == '\n'
				  || str[i] == ','
				    || str[i] == ';'
				    || str[i] == '.'
				    || str[i] == '!'
				    || str[i] == '?'
				    || str[i] == '('
				    || str[i] == ')'
				    || str[i] == '{'
				    || str[i] == '};'

		}

	}
	return (str);
}
